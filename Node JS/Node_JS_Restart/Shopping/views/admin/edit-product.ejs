<%-include('../includes/start.ejs')%>
    <link rel="stylesheet" href="/css/product.css" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <%-include('../includes/navigation.ejs')%>
    <main>
      <form class="product-form" action="/admin/<%if(editing){%>edit-product<% }else{%>add-product<%}%>" method="POST">
        <div class="form-control">
          <label for="title">Title</label>
          <input
            type="text"
            placeholder="Add a product"
            name="title"
            id="title"
            value="<%if(editing){%><%=product.title%><%}%>"
          />
        </div>
        <div class="form-control">
          <label for="title">Image URL</label>
          <input
            type="text"
            placeholder="Add the URL"
            name="imageUrl"
            id="imageUrl"
            value="<%if(editing){%><%=product.imageUrl%><%}%>"
          />
        </div>
        <div class="form-control">
          <label for="title">Price</label>
          <input
            type="number"
            placeholder="Enter the price amount"
            name="price"
            id="price"
            step="0.01"
            value="<%if(editing){%><%=product.price%><%}%>"
          />
        </div>
        <div class="form-control">
          <label for="title">Description</label>
          <textarea
            type="text"
            placeholder="About the product"
            name="description"
            id="description"
            rows="5"
            >
<%if(editing){%><%=product.description%><%}%>
        </textarea>
        </div>
        <% if(editing){ %>
          <input type="hidden" name="productId" value="<%=product._id %>">
        <% } %>
        <button type="submit"><%if(editing){%> Update Product <% }else{ %>Add Product<%} %></button>
      </form>
    </main>
  </body>
  </html>
