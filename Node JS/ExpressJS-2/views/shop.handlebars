    <main>
        {{#if hasProducts}}
            <div class="grid">
                {{#each prod}}
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title">{{this.title}}</h1>
                </header>
                <div class="card__image">
                    <img src="google.com" alt="Sample Image">
                </div>
                <div class="card__content">
                    <h2 class="product__price">120 rs</h2>
                    <p class="product__description">Lorem ipsum dolor sit amet consectetur adipisicing elit. At, maiores esse aperiam hic est beatae aliquid sunt modi obcaecati dolore mollitia asperiores amet pariatur eveniet repellendus aspernatur. Obcaecati, quae temporibus!</p>
                </div>
            </article>
                {{/each}}
        </div>
            {{else }}
                <h1>No Data Found !</h1>
        {{/ if}}
    </main>
</body>
</html>