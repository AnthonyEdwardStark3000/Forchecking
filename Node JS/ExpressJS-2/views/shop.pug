extends layouts/main-layout.pug 
block styles 
    link(rel="stylesheet", href="/css/main.css")

block content
         main
            if prod.length > 0
                .grid
                    each product in prod 
                        article.card.product-item
                            header.card__header  
                                h1.product__title #{product.title}      
                            div.card-image
                                img(src="#gl.com" alt="book 1")            
                            div.card-content
                                h2.product__price 120 rs 
                                p.product__description Nice Book 
                            div.card__actions
                                button.btn Add to Cart          
            else 
                h1 No products    

